<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.novulis_dev_app_v01">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Novulis_dev_app_v01"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".activities.EragonActivity"
            android:exported="true" />
        <activity
            android:name=".activities.UlyssesActivity"
            android:exported="true" />
        <activity
            android:name=".activities.TrinketsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.InProgressActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BookClubsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.BookActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NavigationActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>